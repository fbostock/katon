<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<VBox alignment="CENTER" prefHeight="626.0" prefWidth="460.0" spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:id="root"  fx:controller="com.example.deckbuilder.DeckBuilderController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>

      <StackPane visible="false" managed="false">
         <children>
            <fx:include fx:id="content1" source="combat-view.fxml" />
<!--            <fx:include fx:id="content3" source="content3.fxml" />-->
         </children>
      </StackPane>

       <Label fx:id="welcomeText" text="Initial text" />
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <HBox id="OpponentHand" prefHeight="100.0" prefWidth="200.0" />
            <VBox id="OpponentArea" prefHeight="100.0" prefWidth="366.0">
               <children>
                  <HBox id="OpponentCardsPlayed" fx:id="opponentCardsPlayed" prefHeight="69.0" prefWidth="293.0" style="-fx-background-color: lightgreen;" />
                  <HBox id="OpponentShips" fx:id="opponentShips" layoutX="10.0" layoutY="10.0" prefHeight="59.0" prefWidth="293.0" style="-fx-background-color: pink;" />
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" prefHeight="47.0" prefWidth="420.0" spacing="5.0">
         <children>
            <Label fx:id="play2health" text="Health" textFill="#12e75c" />
            <Label fx:id="play2dam" text="Damage" textFill="#ee060e" />
            <Label fx:id="play2money" text="£" textFill="#efc300" />
             <Button onAction="#onStartGame" text="Start Game" />
            <Button fx:id="fightMode" mnemonicParsing="false" onAction="#fightMode" text="Fight" />
            <Button fx:id="fightNext" layoutX="205.0" layoutY="17.0" mnemonicParsing="false" onAction="#fightNextStage" text="Next" visible="false" />
            <Button mnemonicParsing="false" onAction="#endTurn" text="End Turn" />
            <Label fx:id="play1money" text="£" textFill="#efc300" />
            <Label fx:id="play1dam" text="Damage" textFill="#ee060e" />
            <Label fx:id="play1health" text="Health" textFill="#12e75c" />
         </children>
      </HBox>
      <ScrollPane prefHeight="140.0" prefWidth="420.0">
         <content>
            <HBox id="marketRow" fx:id="marketRow" alignment="TOP_CENTER" prefHeight="120.0" prefWidth="420.0" style="-fx-background-color: cyan;" />
         </content>
      </ScrollPane>
      <HBox id="PlayerShips" fx:id="playerShips" alignment="TOP_CENTER" layoutX="30.0" layoutY="315.0" prefHeight="90.0" prefWidth="399.0" style="-fx-background-color: pink;" />
      <HBox id="PlayerCardsPlayed" fx:id="playerCardsPlayed" alignment="TOP_CENTER" layoutX="30.0" layoutY="375.0" prefHeight="86.0" prefWidth="380.0" style="-fx-background-color: lightgreen;" />
      <HBox id="PlayerHand" fx:id="playerHand" alignment="TOP_CENTER" layoutX="30.0" layoutY="435.0" prefHeight="20.0" prefWidth="420.0" />
   </children>
</VBox>
